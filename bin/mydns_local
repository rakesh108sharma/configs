#!/bin/bash
#
# rewrites my /etc/resolv.conf file
# sets gateway to resolve names
#

########## BEGIN   INFO ##########
# Generated by dhcpcd
# /etc/resolv.conf.head can replace this line
# /etc/resolv.conf.tail can replace this line
#nameserver 192.168.1.1    # Gateway
##PRIMARY
#nameserver 195.238.2.22    # Belgacom Pool42 BE
##SECONDARY
#nameserver 67.17.215.132   # Global Crossing snv US
#nameserver 4.2.2.5         # Genuity BAK
##TERTIARY
#nameserver 195.13.1.13     # BelBone BE
#nameserver 195.13.2.13     # BelBonw-3 BE
##OTHER
#nameserver 8.8.8.8         # Google
########## END INFO ##########

sudo sh -c "echo nameserver 192.168.1.1 > /etc/resolv.conf"

echo
echo
mydns_show
echo


## END


